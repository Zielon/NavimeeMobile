<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:background="@color/primary"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/primary"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/text_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="20"
                android:textColor="@color/white"
                android:textSize="@dimen/text_body"
                tools:text="Antony Ribot" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_address_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/image_address_name"
                android:ellipsize="end"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_body"
                tools:text="developer" />

            <ImageView
                android:id="@+id/image_address_name"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:paddingTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_name"
                android:src="@mipmap/place_address" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_below="@id/text_name"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image_address_name"
                android:layout_toRightOf="@+id/image_address_name"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_body"
                tools:text="developer" />

            <ImageView
                android:id="@+id/imageTime"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:paddingTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_address"
                android:layout_marginTop="8dp"
                android:src="@drawable/end_time_24dp" />

            <TextView
                android:id="@+id/viewTextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_address"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageTime"
                android:layout_toRightOf="@+id/imageTime"
                android:paddingStart="10dp"
                android:text="18:30"
                android:textColor="@color/white" />

        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_alignBottom="@id/left_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:elevation="8dp"
                android:minWidth="76dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintBottom_toTopOf="@+id/imageCount"
                fancy:mfb_defaultColor="@color/button_background"
                fancy:mfb_focusColor="@color/white"
                fancy:mfb_radius="2dp"
                fancy:mfb_text="@string/popup_events_info3_button"
                fancy:mfb_textSize="11sp" />

            <ImageView
                android:id="@+id/imageCount"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/ranking_1"
                card_view:layout_constraintTop_toBottomOf="@+id/addButton"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintVertical_chainStyle="spread" />


        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
