<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:background="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      >

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_body"
                tools:text="Antony Ribot"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/image_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/location_name_24dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/text_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/image_address_name"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_body"
                tools:text="developer" />

            <ImageView
                android:id="@+id/image_text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_address_name"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:src="@drawable/location_address_24dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_address_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/image_text_address"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_body"
                tools:text="developer"
                android:paddingLeft="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp">

            <ImageView
                android:id="@+id/imageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_people_white" />


            <ImageView
                android:id="@+id/imageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageCount"
                android:paddingLeft="10dp"
                android:src="@drawable/end_time_24dp" />

            <TextView
                android:id="@+id/viewTextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageTime"
                android:paddingLeft="10dp"
                android:text="18:30"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageMaybe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/viewTextTime"
                android:paddingLeft="10dp"
                android:src="@drawable/visibilty_on_24dp" />

            <TextView
                android:id="@+id/viewTextMaybe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:layout_toRightOf="@+id/imageMaybe"
                android:paddingLeft="10dp"
                android:text="18:30"
                android:textColor="@color/white" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/bell_24dp"
                app:backgroundTint="@color/button_backgrtound"
                app:borderWidth="0dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
