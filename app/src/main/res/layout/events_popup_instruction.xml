<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner2"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/popup_events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingEnd="24dp"
                android:paddingStart="24dp"
                android:textAlignment="center"
                android:text="@string/popup_events_title"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/popup_events_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:paddingEnd="0dp"
                android:paddingStart="12dp"
                android:text="@string/popup_events_info"
                android:textColor="@color/gray_font"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/popup_events_title" />

            <RelativeLayout
                android:id="@+id/popup_events_info1_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_events_info">
                <!--36-->

                <ImageView
                    android:id="@+id/calendar_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_today_grey_24dp" />

                <TextView
                    android:id="@+id/popup_events_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/calendar_icon1"
                    android:paddingEnd="24dp"
                    android:paddingStart="12dp"
                    android:text="@string/popup_events_info1"
                    android:textColor="@color/gray_font"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/popup_events_info2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_events_info1_layout">

                <ImageView
                    android:id="@+id/calendar_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_event_available_grey_24dp" />

                <TextView
                    android:id="@+id/popup_events_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/calendar_icon2"
                    android:paddingEnd="24dp"
                    android:paddingStart="12dp"
                    android:text="@string/popup_events_info2"
                    android:textColor="@color/gray_font"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/popup_events_info3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_events_info2_layout">

                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/popup_events_info3_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:elevation="8dp"
                    fancy:mfb_defaultColor="@color/button_background"
                    fancy:mfb_focusColor="@color/white"
                    fancy:mfb_radius="2dp"
                    fancy:mfb_text="@string/popup_events_info3_button"
                    fancy:mfb_textSize="12sp" />

                <TextView
                    android:id="@+id/popup_events_info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/popup_events_info3_button"
                    android:paddingEnd="24dp"
                    android:paddingStart="12dp"
                    android:text="@string/popup_events_info3"
                    android:textColor="@color/gray_font"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/popup_events_info4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_events_info3_layout">

                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/popup_events_info4_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:elevation="8dp"
                    fancy:mfb_defaultColor="@color/button_background"
                    fancy:mfb_focusColor="@color/white"
                    fancy:mfb_radius="2dp"
                    fancy:mfb_text="@string/popup_events_info4_button"
                    fancy:mfb_textSize="12sp" />

                <TextView
                    android:id="@+id/popup_events_info4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/popup_events_info4_button"
                    android:paddingEnd="24dp"
                    android:paddingStart="12dp"
                    android:text="@string/popup_events_info4"
                    android:textColor="@color/gray_font"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/popup_events_info5_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_events_info4_layout">

                <ImageView
                    android:id="@+id/event_size_icon_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ranking_5" />

                <TextView
                    android:id="@+id/popup_events_info5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/event_size_icon_full"
                    android:paddingEnd="24dp"
                    android:paddingStart="12dp"
                    android:text="@string/popup_events_info5"
                    android:textColor="@color/gray_font"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/popup_events_info6_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_events_info5_layout">

                <ImageView
                    android:id="@+id/event_size_icon_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ranking_1" />

                <TextView
                    android:id="@+id/popup_events_info6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/event_size_icon_single"
                    android:paddingEnd="24dp"
                    android:paddingStart="12dp"
                    android:text="@string/popup_events_info6"
                    android:textColor="@color/gray_font"
                    android:textSize="13sp" />

            </RelativeLayout>

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/understood_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:elevation="8dp"
                android:padding="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popup_events_info6_layout"
                fancy:mfb_defaultColor="@color/button_background"
                fancy:mfb_focusColor="@color/white"
                fancy:mfb_radius="2dp"
                fancy:mfb_text="@string/popup_events_understood"
                fancy:mfb_textSize="16sp" />

            <TextView
                android:id="@+id/popup_hotspot_preference_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/popup_events_preference_info"
                android:textAlignment="center"
                android:textColor="@color/gray_font"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/understood_button" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>