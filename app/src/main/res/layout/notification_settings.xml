<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="org.pl.android.drively.ui.settings.personalsettings.PersonalSettingsActivity">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/notifications"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/day_schedule_notifications_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_title"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/day_schedule_notifications_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="@string/notifications_day_schedule"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/day_schedule_notifications_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_schedule_notifications_text"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:text="@string/notifications_day_schedule_description"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Switch
            android:id="@+id/day_schedule_notifications_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingTop="30dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:theme="@style/SwitchCompatTheme" />
    </RelativeLayout>

</RelativeLayout>