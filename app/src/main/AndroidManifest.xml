<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.pl.android.drively">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name="org.pl.android.drively.BoilerplateApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="65d61d3072c40f7b890edd3e7f0e58e64f347dcf" />

        <service android:name="org.pl.android.drively.notifications.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="org.pl.android.drively.notifications.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="org.pl.android.drively.ui.main.MainActivity"
            android:launchMode="singleTop"
            android:label="Drively">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.pl.android.drively.ui.intro.IntroActivity"
            android:label="@string/app_name" />
        <activity
            android:name="org.pl.android.drively.ui.welcome.WelcomeActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="org.pl.android.drively.ui.signin.SignInActivity"
            android:launchMode="singleTop"
            android:parentActivityName="org.pl.android.drively.ui.welcome.WelcomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.pl.android.drively.ui.signup.SignUpActivity"
            android:launchMode="singleTop"
            android:parentActivityName="org.pl.android.drively.ui.welcome.WelcomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="org.pl.android.drively.ui.settings.SettingsActivity"
            android:label="Menu"
            android:launchMode="singleTop"
            android:parentActivityName="org.pl.android.drively.ui.main.MainActivity" />
        <activity
            android:name="org.pl.android.drively.ui.settings.personalsettings.PersonalSettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="org.pl.android.drively.ui.settings.SettingsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.pl.android.drively.ui.settings.user.UserSettingsActivity"
            android:label="@string/user"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"
            android:parentActivityName="org.pl.android.drively.ui.settings.SettingsActivity" />
        <activity
            android:name="org.pl.android.drively.ui.settings.user.password.UserPasswordChangeActivity"
            android:label="@string/change_password"
            android:launchMode="singleTop"
            android:parentActivityName="org.pl.android.drively.ui.settings.user.UserSettingsActivity" />
        <activity
            android:name="org.pl.android.drively.ui.settings.user.email.UserEmailChangeActivity"
            android:label="@string/change_email"
            android:launchMode="singleTop"
            android:parentActivityName="org.pl.android.drively.ui.settings.user.UserSettingsActivity" />
        <activity
            android:name="org.pl.android.drively.ui.settings.user.name.UserNameChangeActivity"
            android:label="@string/change_name"
            android:launchMode="singleTop"
            android:parentActivityName="org.pl.android.drively.ui.settings.user.UserSettingsActivity" />
        <activity
            android:name="org.pl.android.drively.ui.settings.user.reauthenticate.ReauthenticateActivity"
            android:label="@string/reauthenticate"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name="org.pl.android.drively.ui.chat.chatview.ChatViewActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="org.pl.android.drively.ui.main.MainActivity"/>

    </application>

</manifest>